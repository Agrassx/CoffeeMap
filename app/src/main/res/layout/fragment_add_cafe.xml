<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AddCafeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Новое место"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Название"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCafeName"
        android:hint="Введите название кафе"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Часы работы"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/7"
                    android:id="@+id/radioButAlwaysOpen"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:checked="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="30dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 20:00"
                    android:id="@+id/radioButSecond"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:layout_gravity="center_horizontal" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Другое"
                    android:id="@+id/radioButAnother"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp" />
            </RadioGroup>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Оценка"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Комментарий"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Оставьте свой комментарий"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonAddPoint"
            android:src="@drawable/ic_save_24dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>

</LinearLayout>
