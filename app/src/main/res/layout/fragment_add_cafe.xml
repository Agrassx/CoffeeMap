<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AddCafeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ACF_TV_New_Place"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ACF_TV_Name"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCafeName"
        android:hint="@string/ACF_Input_CafeName"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ACF_TV_WorkTime"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:visibility="gone">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/radioGroupOpenHours">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ACF_TV_WorkTime_Always"
                    android:id="@+id/radioButAlwaysOpen"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:checked="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="30dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ACF_TV_WorkTime_9_20"
                    android:id="@+id/radioButSecond"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:layout_gravity="center_horizontal" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ACF_TV_WorkTime_Another"
                    android:id="@+id/radioButAnother"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp" />
            </RadioGroup>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ACF_TV_Mark"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ACF_TV_Comment"
        android:visibility="invisible"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:visibility="invisible"
        android:id="@+id/editTextComment"
        android:hint="@string/ACF_Input_Comment"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonSavePoint"
            android:src="@drawable/ic_save_24dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>

</LinearLayout>
